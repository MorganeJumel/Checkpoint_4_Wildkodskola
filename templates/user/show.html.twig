{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td>{{ user.phonenumber }}</td>
            </tr>
        </tbody>
    </table>

    {# {% if app.user.id == user.id %} #}
        <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    {# {% endif %} #}
{% endblock %}
