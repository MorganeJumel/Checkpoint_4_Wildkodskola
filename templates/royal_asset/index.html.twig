{% extends 'base.html.twig' %}

{% block title %}Royal Assets - Kingdom of Wildkodskola{% endblock %}

{% block body %}

    <h1>Royal Assets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        {% for royal_asset in royal_assets %}
            <tr>
                <td>{{ royal_asset.name }}</td>
                <td>{{ royal_asset.description }}</td>
                <td>{{ royal_asset.nbAsset }}</td>
                <td>
                    <a href="{{ path('royal_asset_show', {'id': royal_asset.id}) }}">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No asset found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('royal_asset_new') }}">Create new</a>
{% endblock %}
